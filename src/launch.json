  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "preLaunchTask": "npm: start",
      "postDebugTask": "debug-stop",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src",
      "sourceMapPathOverrides": {
        "meteor://ðŸ’»app/*": "${workspaceFolder}/*",
